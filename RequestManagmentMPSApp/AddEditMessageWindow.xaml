<Window x:Class="RequestManagmentMPSApp.AddEditMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RequestManagmentMPSApp"
        mc:Ignorable="d"
        Title="Сообщение" Height="400" Width="500" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="10,10,10,45">
            <TextBlock x:Name="tBlock1" Margin="10,2,10,2">Заявка: </TextBlock>
            <TextBlock x:Name="tBlock2" Margin="10,2,10,2">Заявитель:</TextBlock>
            <TextBlock x:Name="tBlock3" Margin="10,2,10,2">Ответчик:</TextBlock>
            <TextBlock Margin="10,2,10,2">Сообщение:</TextBlock>
            <TextBox x:Name="tBlox1" Margin="10,2,10,2" Height="238" MinLines="10"></TextBox>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button HorizontalAlignment="Left" Margin="10" Click="Button_Click">                Отмена            </Button>
            <Button HorizontalAlignment="Right" Margin="10" Click="Button_Click_1">Сохранить</Button>
        </StackPanel>
    </Grid>
</Window>
